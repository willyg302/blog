doctype xml
rss(version='2.0',
    xmlns:content='http://purl.org/rss/1.0/modules/content/',
    xmlns:wfw='http://wellformedweb.org/CommentAPI/',
    xmlns:dc='http://purl.org/dc/elements/1.1/'
    xmlns:atom='http://www.w3.org/2005/Atom')
	channel
		title= blog.title
		atom:link(rel='self', type='application/rss+xml', href=blog.uri + "/feed.xml")
		link= blog.uri
		description= blog.description
		pubDate= moment(date).format('ddd, DD MMM YYYY HH:mm:ss ZZ')
		language en
		for post in collections.posts
			- var permalink = blog.uri + "/" + post.path
			- var content = post.less || post.contents
			item
				title= post.title
				link= permalink
				pubDate= moment(post.date).format('ddd, DD MMM YYYY HH:mm:ss ZZ')
				guid(isPermaLink='true')= permalink
				author= owner.name
				description= content
